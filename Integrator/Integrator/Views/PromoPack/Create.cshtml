@model Integrator.Models.Promociones.PromoPack

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create","Promopack"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PromoPack</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.nombre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre)
                @Html.ValidationMessageFor(model => model.nombre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PackID, "Pack", htmlAttributes: new { @class = "control-label col-md-2" })  
            @*<label class="control-label col-md-2" for="DepartmentID">PackID</label>*@
            <div class="col-md-10">
                @Html.DropDownList("PackID", null, htmlAttributes: new { @class = "form-control" })

                @* @Html.DropDownListFor(model => model.pack, new SelectList(ViewBag.PackID(),), "--- select pack ---", new { @class = "txtFormtext" })*@

                    @Html.ValidationMessageFor(model => model.PackID, "", new { @class = "text-danger" })
            </div>
        </div>
            @{
                 if (ViewBag.err == 1)
                {
                    @ViewBag.message;
                }
            }




            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>



        </div>















    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
